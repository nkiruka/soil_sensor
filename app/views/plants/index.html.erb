<table id="reading" class="display table" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Threshold</th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.threshold %></td>
      </tr>
    <% end %>
  </tbody>
</table>
